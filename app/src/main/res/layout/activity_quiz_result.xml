<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cupwc"
    tools:context=".QuizResultActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="254dp"
        android:fontFamily="@font/kanit_bold"
        android:text="คุณตอบคำถามครบเเล้ว"
        android:textColor="@color/mainwhite"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/successTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/kanit_bold"
        android:text="เเสดงความยินดีด้วยคุณได้"
        android:textColor="@color/mainwhite"
        android:textSize="26sp" />

    <LinearLayout
        android:id="@+id/successText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/successTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_bold"
            android:gravity="center"
            android:text="Correct Answer : 0"
            android:textColor="@color/mainwhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/WrongAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kanit_bold"
            android:gravity="center"
            android:text=" Wrong Answer : 0"
            android:textColor="@color/mainwhite"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuiz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_back_light_green"
        android:fontFamily="@font/kanit_bold"
        android:text="กลับสู่หน้าหลัก"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>